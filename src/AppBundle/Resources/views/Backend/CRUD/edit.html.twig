{% extends base_template %}


{% block javascripts %}
    {{ parent() }}

<script>
    function hideTd(table, find)
    {
        var trs = table.find('tr');
        var th = table.find('th'+find).hide();


        $.each(trs, function(index, val) {
            $(this).find('td'+find).hide();
        });
    }

    $(document).ready(function(){

        hideTd($('.table'), ':nth-child(4)');

    });


    $(document).on({

        ajaxStop: function()
        {
            hideTd($('.table'), ':nth-child(4)');

        }
    });

    </script>
{% endblock %}

